<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyUserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">        
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>            
        </Grid.RowDefinitions>
        <StackPanel Background="BlanchedAlmond">
            <TextBlock FontSize="40" HorizontalAlignment="Center" FontWeight="Bold">Travel Agency</TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel>
                <TextBox Width="300" Height="30" FontSize="20" Margin="20,50,0,0" HorizontalAlignment="Left">Type Agent Name</TextBox>
                <Button Width="300" Height="75" Margin="60" FontSize="40" Background="LightBlue">Start</Button>                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
